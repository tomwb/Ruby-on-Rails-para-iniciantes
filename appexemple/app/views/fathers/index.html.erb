<h1>Listing fathers</h1>

<table>
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Name</th>
      <th>Ocupação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fathers.each do |father| %>
      <tr>
        <td><%= image_tag father.avatar.url(:thumb) %></td>
        <td><%= father.name %></td>
        <td><%= father.occupation_description %></td>
        <td><%= link_to 'Show', father %></td>
        <td><%= link_to 'Edit', edit_father_path(father) %></td>
        <td><%= link_to 'Destroy', father, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

